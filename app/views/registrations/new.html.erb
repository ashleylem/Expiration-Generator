<div class="flex-col flex justify-center">
  <h1 class="text-center text-4xl">Sign Up</h1>
  <div class="rounded shadow-md m-auto w-1/4">
  <div class="m-8">
  <%= form_with model: @user, url: sign_up_path do |f| %>
    <p>
    <%= f.label 'email' %><br>
    <%= f.text_field :email %>
    </p>
    <p>
        <p>
    <%= f.label 'username' %><br>
    <%= f.text_field :username %>
    </p>
    <%= f.label 'password' %><br>
    <%= f.password_field :password %>
    </p>
    <p>
    <%= f.label 'password_confirmation' %><br>
    <%= f.password_field :password_confirmation %>
    </p>
    <p>
    <%= f.submit 'Sign Up' %>
    </p>
  <% end %>
  </div>
  </div>
</div>