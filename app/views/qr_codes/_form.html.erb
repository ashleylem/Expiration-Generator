<%= form_with model: @qr_code, url: qr_codes_path do |f| %>

    <div class="my-5">
    <%= f.label :product_name %>
    <%= f.text_field :product_name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= f.label :expiration_code %>
    <%= f.text_field :expiration_code, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline">
    <%= f.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
