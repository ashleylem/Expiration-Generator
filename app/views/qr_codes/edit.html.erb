<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Edit your QR Code</h1>

  <%= render "form", qr_code: @qr_code %>
  <%= button_to 'Destroy this QR Code', qr_code_path(@qr_code), method: :delete, class: "mt-2 text-white rounded-lg py-3 px-5 bg-red-500 font-medium" %>
  <%= link_to "Back to profile", profile_path, class: "rounded-lg py-3 mt-2  inline-block px-5 bg-gray-100  font-medium" %>
</div>
